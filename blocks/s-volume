#!/bin/sh

sound=$(amixer get Master | grep 'Right:' | awk -F'[][]' '{ print $4 }')
vol=$(amixer get Master | grep 'Right:' | awk -F'[][]' '{ print $2 }' | sed 's/%$//')

if [ "$sound" = "off" ]; then
  echo "ðŸ”‡ $vol%"
elif [ "$vol"  -ge 80 ]; then
  echo "ðŸ”Š $vol%"
elif [ "$vol"  -ge 60 ]; then
  echo "ðŸ”Š $vol%"
elif [ "$vol"  -ge 20 ]; then
  echo "ðŸ”‰ $vol%"
else
  echo "ðŸ”ˆ $vol%"
fi
